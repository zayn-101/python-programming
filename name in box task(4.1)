name=input('enter your name ')
uppername=name.upper()
lowername=name.lower()

print('------------------------------------------------')
print('|                                               |')
print('|' + uppername    +                         '|'.rjust(44))                                   
print('|                                               |')
print('|                                               |')
print('| ' + name.center(46) +                         '|')
print('|                                               |')
print('|                                               |')
print('|                                               |')
print('|                                               |')
print('|                                               |')
print('|                                               |')
print('|                                               |')
print('|                                               |')
print('|                                               |')
print('| ' + lowername.rjust(46) +                         '|')
print('|                                               |')
print('|                                               |')                              
print('------------------------------------------------')
